%h1== #{@user.fullname}

.well
  .div
    %strong
      Imię
    = @user.firstname
  .div
    %strong
      Nazwisko
    = @user.lastname
  .div
    %strong
      Email
    = @user.email
  .div
    %strong
      Phone
    = @user.phone
  .div
    %strong
      Adres
    = @user.city
    = @user.street
    = @user.zip_code

  .div
    %strong
      Uprawnienia
    - @user.roles.each do |role|
      = role.name

= link_to "Edycja konta", edit_user_path(@user), :class => "btn btn-default"

