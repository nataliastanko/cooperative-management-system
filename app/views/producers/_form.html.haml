= simple_form_for @producer, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = error_span(@producer[:name])
  = f.input :description
  = error_span(@producer[:description])
  = f.input :is_active
  = error_span(@producer[:is_active])
  = f.input :address
  = error_span(@producer[:address])
  = f.input :phone
  = error_span(@producer[:phone])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), producers_path, :class => 'btn btn-default'
