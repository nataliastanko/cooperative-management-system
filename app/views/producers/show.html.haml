- model_class = Producer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @producer.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @producer.description
%p
  %strong= model_class.human_attribute_name(:is_active) + ':'
  %br
  = @producer.is_active
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @producer.address
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @producer.phone


= link_to t('.back', :default => t("helpers.links.back")), producers_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_producer_path(@producer), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), producer_path(@producer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
