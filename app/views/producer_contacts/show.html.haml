- model_class = ProducerContact
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:firstname) + ':'
  %br
  = @producer_contact.firstname
%p
  %strong= model_class.human_attribute_name(:lastname) + ':'
  %br
  = @producer_contact.lastname
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @producer_contact.phone
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @producer_contact.description


= link_to t('.back', :default => t("helpers.links.back")), producer_contacts_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_producer_contact_path(@producer_contact), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), producer_contact_path(@producer_contact), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Czy na pewno chcesz usunÄ…Ä‡?')) }, :class => 'btn btn-danger'
