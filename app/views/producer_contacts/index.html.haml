- model_class = ProducerContact
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:firstname)
      %th= model_class.human_attribute_name(:lastname)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @producer_contacts.each do |producer_contact|
      %tr
        %td= link_to producer_contact.id, producer_contact_path(producer_contact)
        %td= producer_contact.firstname
        %td= producer_contact.lastname
        %td= producer_contact.phone
        %td= producer_contact.description
        %td=l producer_contact.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_producer_contact_path(producer_contact), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), producer_contact_path(producer_contact), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Czy na pewno chcesz usunąć?')) }, :class => 'btn btn-xs btn-danger'
