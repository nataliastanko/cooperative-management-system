- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @product.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @product.description
%p
  %strong= model_class.human_attribute_name(:is_active) + ':'
  %br
  = @product.is_active
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @product.price
%p
  %strong= model_class.human_attribute_name(:unit) + ':'
  %br
  = @product.unit


= link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

%h2 Komentarze do produktu
.comments
  - @product.product_comments.each do |comment|
    .well
      %strong
        Autor
      %div
        %em
          = comment.content

= form_for [@product, ProductComment.new] do |f|

  .form-group
    = f.label :content, "Treść komentarza"
    = f.text_area :content, class: 'form-control'
    = f.error_message_on(:content)

  %div.actions
    = f.submit "Dodaj komentarz", :class => 'btn btn-primary'